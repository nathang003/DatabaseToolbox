<UserControl x:Class="ToolboxUI.Controls.UmlObjectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolboxUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Style="{DynamicResource SectionBorder}">
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Style="{DynamicResource UMLObjectHeader}" Text="{Binding Title}" Margin="5"/>
            <ListView DockPanel.Dock="Top" Margin="5" ItemsSource="{Binding Values}" />
        </DockPanel>
    </Border>
</UserControl>
